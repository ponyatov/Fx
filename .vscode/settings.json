{
    "multiCommand.commands": [
        { "command": "multiCommand.f11",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make br \u000D"}}]},
        { "command": "multiCommand.f12",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make all \u000D"}}]}
    ],

    // files
    "files.exclude":{
        "buildroot-**": true,
        "syslinux-**": true,
    },
    "files.associations": {
        "*.ini": "fx",
        "*.br": "makefile",
        "*.kernel": "makefile",
        "etc/**": "shellscript",
    },

    // editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "workbench.tree.indent": 24,
    "explorer.autoReveal": false,
    "files.insertFinalNewline": true,
    // "git.enabled": false,

    // msys
    "terminal.integrated.profiles.windows": {
        "MSYS2": {
            "path": "C:\\msys64\\usr\\bin\\bash.exe",
            "args": [ "--login", "-i" ],
            // "path": "C:\\msys64\\mingw64.exe",
            "env": { "MSYSTEM": "MINGW64", "CHERE_INVOKING": "1" }
        }
    },

    // clang-format
    "clang-format.executable":     "clang-format",
    "clang-format.fallbackStyle":  "Google",
    "clang-format.style":          "file",

    // C++
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     true
    },
}
